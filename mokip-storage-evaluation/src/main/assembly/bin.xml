<assembly>
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>mokip-storage-evaluation</baseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/config</directory>
			<outputDirectory>.</outputDirectory>
			<excludes>
				<exclude>*/.gitkeep</exclude>
				<exclude>test.py</exclude>
				<exclude>analyze.py</exclude>
				<exclude>mokip</exclude>
				<exclude>graphdb</exclude>
				<exclude>rdfpro</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>src/main/config</directory>
			<outputDirectory>.</outputDirectory>
			<fileMode>0755</fileMode>
			<directoryMode>0755</directoryMode>
			<includes>
				<include>test.py</include>
				<include>analyze.py</include>
				<include>mokip</include>
				<include>graphdb</include>
				<include>rdfpro</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>software/mokip</outputDirectory>
			<useTransitiveFiltering>true</useTransitiveFiltering>
		</dependencySet>
	</dependencySets>
</assembly>
